<%- include ("../partials/header")%>
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">YelpCamp</p>
			<div class="list-group">
				<li class="list-group-item">Info 1</li>
				<li class="list-group-item">Info 2</li>
				<li class="list-group-item">Info 3</li>
			</div>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				<img class="img-responsive" src="<%= campground.image%>" alt="" srcset="">

				<div class="caption-full">
					<h4 class="pull-right">$<%=campground.price%>/night</h4>
					<h4>
						<a href="">
							<h1><%=campground.name%></h1>
						</a>
					</h4>
					<p><%=campground.description%></p>
					<p>
						<em>Submitted by : <%=campground.author.username%></em>
					</p>

					<% if (currentUser && campground.author.id.equals(currentUser.id)) { %>
					<a class="btn btn-warning" href="/campgrounds/<%=campground._id%>/edit">Edit</a>
					<form class="delete-form" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
						<button class="btn btn-danger" type="submit">Delete</button>
					</form>
					<% } %>

				</div>
			</div>
			<div class="well">
				<div class="text-right"><a class="btn btn-success" href="/campgrounds/<%=campground._id%>/comments/new">
						Add New Comments</a>
				</div>
				<br>
				<% campground.comments.forEach((comment)=>{%>
				<div class="row">
					<div class="col-md-10">
						<strong><%= comment.author.username%></strong>
						<p><%= comment.text%></p>
						<% if(currentUser && comment.author.id.equals(currentUser.id)){%>
						<a class="btn btn-xs btn-warning"
							href="/campgrounds/<%=campground._id%>/comments/<%=comment.id%>/edit">Edit</a>
						<% } %>
						<% if(currentUser && comment.author.id.equals(currentUser.id) || currentUser && campground.author.id.equals(currentUser.id)){%>
						<form class="delete-form"
							action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=DELETE"
							method="POST">
							<button class="btn btn-xs btn-danger" type="submit">Delete</button>
						</form>
						<% } %>

					</div>
					<div class="col-md-2">
						<span class="pull-right">2 days ago</span>
					</div>
				</div>
				<br>
				<%})%>
			</div>
		</div>

	</div>

</div>
<%-include("../partials/footer")%>
