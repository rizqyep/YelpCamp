<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 class="text-center">Add new campground data</h1>
        <div style="width : 30%;margin : 30px auto;">
            <form action="/campgrounds" method="post">
                <div class="form-group"><input class="form-control" type="text" name="name"
                        placeholder="Camp Site Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="imageurl" placeholder="Image Url">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" min="0.01" step="0.01" name="price" placeholder="Price">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="Description">
                </div>

                <button class="btn btn-primary btn-block">Submit</button>
            </form>
            <a href="/">Back To HomePage</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>
