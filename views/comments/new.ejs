<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 class="text-center">Add new comments to <%=campground.name%></h1>
        <div style="width : 30%;margin : 30px auto;">
            <form action="/campgrounds/<%=campground._id%>/comments" method="post">
                <div class="form-group"><input class="form-control" type="text" name="comment[text]"
                        placeholder="Comment text">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" placeholder="Author name">
                </div>

                <button class="btn btn-primary btn-block">Submit</button>
            </form>
            <a href="/">Back To HomePage</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>
